<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    android:id="@+id/list"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/staysafe"
        android:padding="5dp"
        android:background="@drawable/imageborder"
        android:scaleType="fitXY"
        android:textColor="@color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastupdate"
        android:textSize="8sp"
        android:background="@drawable/ripple3"
        android:padding="4dp"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:hint="NIL"
        android:layout_marginTop="12dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/ripple1"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totalcount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-medium"

                android:gravity="center"
                android:hint="NIL"
                android:textColor="#B388FF"
                android:textSize="15sp"
                tools:text="0" />
            <TextView
                android:id="@+id/totalcases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#B388FF"
                android:text="TOTAL"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totalactivecount"
                android:layout_width="wrap_content"
                android:hint="NIL"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                tools:text="0" />
            <TextView
                android:id="@+id/totalactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="ACTIVE"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totaldeathscount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:hint="NIL"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                tools:text="0" />
            <TextView
                android:id="@+id/totaldeaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:text="DECEASED"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/state_list"
        android:textStyle="bold"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:textSize="23sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:background="@drawable/ripple"
            android:gravity="center"
            android:text="STATE WISE DATA"
            android:layout_margin="5dp"

            />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
</ScrollView>