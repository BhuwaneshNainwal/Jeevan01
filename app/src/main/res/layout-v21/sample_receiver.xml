<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="7dp"
    android:layout_marginRight="7dp"
    android:maxWidth="310dp"
    android:maxHeight="400dp"
    android:minHeight="30dp"
    android:background="@drawable/bg_receiver"
    android:layout_marginTop="6dp">


    <TextView
        android:id="@+id/receivermessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textLongMessage"
        android:maxWidth="270dp"
        android:minWidth="50dp"
        android:text="gfffyfygfdfhhhgfdhdfgdgfjdfgjgfjgfh"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/receiverimage"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:layout_marginBottom="15dp"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/receivertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00pm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="4dp"
        android:textSize="11sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/receivertime"
        app:layout_constraintTop_toBottomOf="@+id/receivermessage"
        android:id="@+id/receiverimage"
        android:visibility="visible"
        android:src="@drawable/bg1"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_marginStart="5dp">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>